<div>
<h2><%= @title %></h2>

<.form let={f} for={@changeset} url="#"
  id="translation-form"
  phx_target={@myself}
  phx_change="validate"
  phx_submit="save"
>

<%= label f, :name %>
<%= text_input f, :name %>
<%= error_tag f, :name %>

<%= label f, :slug %>
<%= text_input f, :slug %>
<%= error_tag f, :slug %>

<%= submit "Save", phx_disable_with: "Saving..." %>
</.form>
</div>